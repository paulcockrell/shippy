apiVersion: apps/v1
kind: Deployment
metadata:
    namespace: default
    name: consignment
spec:
    replicas: 1
    selector:
        matchLabels:
            app: consignment
    template:
        metadata:
            labels:
                app: consignment
        spec:
            restartPolicy: Always
            containers:
                - name: consignment-service
                  image: consignment-service:latest
                  imagePullPolicy: Never
                  command: [
                      "./consignment-service",
                      "--selector=static",
                      "--server_address=:8080",
                  ]
                  env:
                      - name: DB_HOST
                        value: mongodb://mongo:27017
                      - name: MICRO_ADDRESS
                        value: :50051
                      - name: MICRO_REGISTRY
                        value: mdns
                      - name: UPDATED_AT
                        value: "{{ UPDATED_AT }}"
                  ports:
                      - containerPort: 8080
                        name: cons-port
